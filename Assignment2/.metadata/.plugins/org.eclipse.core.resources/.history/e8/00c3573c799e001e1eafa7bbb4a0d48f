package com.sunbeam.servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.sunbeam.pojos.Users;

public class AddReviewServlet extends HttpServlet{

		@Override
		protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
			HttpSession session = req.getSession();
			Users currUser = session.getAttribute("CurrUser")
			resp.setContentType("text/html");
			PrintWriter out = resp.getWriter();
			
			out.println("<html>");
			out.println("<head>");
			out.println("<title>Movie List</title>");
			out.println("</head>");
			out.println("<body>");
			out.println("<h4> Hello, " + currUser.getFirstName() + " " + currUser.getLastName()+"<br /><hr />");
			out.println("<center>");
			out.println("<table style='width:600px';>");
			out.println("<tbody>");
			out.println("<tr>");
			out.println("<td><a href=#>All Review</a></td>");
			out.println("<td><a href=#>My Reviews</a></td>");
			out.println("<td><a href=#>Shared Review</a></td>");
			out.println("</tr>");
			out.println("</tbody>");
			out.println("</table>");
			out.println("</center>");
			out.println("<br />");
			out.println("<center>");
			out.println("<table border='1'>");
			out.println("<thead>");
			out.println("<th>Id</th>");
			out.println("<th>Name</th>");
			out.println("<th>Release Date</th>");
			out.println("</thead>");
			out.println("<tbody>");
			
		}
}
